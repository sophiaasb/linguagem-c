#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>
#include <ctype.h>
#include <limits.h>
#include <time.h>

int main() {
	setlocale(LC_ALL, "portuguese");

	// Declarando variáveis.
	char // Cadeia
	char // Caracter
	int // Inteiro
	float // Real

  // Solicitando dados para o usuário.
	printf("Digite variavel: ");
	scanf("%s",&variavel);
	
	fflush(stdin); // Limpa o cache de input.
	system("cls"); // Limpa o terminal no Windows.
	system("cls"); // Limpa o temrinal no Linux.
	system("cls || clear"); // Limpa o terminal no Windows e Linux.

	// Exibindo resultados.
	printf("\n=== Exibindo resultados ===\n");
	printf("Váriavel: %s \n", variavel); // %s -> string -> cadeia
	printf("Váriavel: %c \n", variavel); // %c -> char -> caracter
	printf("Váriavel: %i \n", variavel); // %i -> int -> inteiro
	printf("Váriavel: %f \n", variavel); // %f -> float -> real
	printf("\nVáriavel: %.2f \n", variavel);

// ELSE IF

  if (variavel >= 7) printf("\nFrase.");
  if (variavel < 7) printf("\nFrase.");

  if (variavel >= 18 && variavel <= 65) {
		printf("\nFrase.");
  } else {
		printf("\nFrase.");	
  }	

  if (strcmp(variavelUm, variavelDois) == 0 && strcmp(variavelTres, variavelQuatro) == 0) {
    printf("\nFrase!");
	} else { 
    printf("\nFrase.");
  }

 if (conceito == 'A' || conceito == 'B' || conceito == 'C') {
   	strcpy(resultado, "Aprovado.");
   } else {
   	strcpy(resultado, "Reprovado.");
   }

  // SWITCH CASE

variavel = toupper(variavel);
	
	switch(variavel) {
		case '1':
			variavelUm;
			break;
		case '2':
			variavelDois;
			break;
		default:
			printf("Opção inválida!");

    // DO WHILE

do {
printf ("Frase: ");
scanf ("%f", &variavel);
somaVariaveis += variavel;
contador++;

printf ("Pergunta? (s/n): ");
scanf ("%s", &resposta);
} while (strcmp(resposta, "s") == 0 || strcmp (resposta, "s") == 0);

media = somaVariaveis / contador;
printf ("A Média é: %.2f\n", media);
return 0;
}
	}
	
	getchar();
	
	return 0;
